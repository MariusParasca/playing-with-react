{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint-config-airbnb-base",
  "rules": {
    "no-template-curly-in-string": 0,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": 0,
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "max-len": [
      "error",
      162,
      {
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "class-methods-use-this": 0,
    "no-unused-vars": [
      "error",
      {
        "args": "after-used"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "consistent-return": 0,
    "no-restricted-syntax": [
      "error",
      "WithStatement",
      "BinaryExpression[operator='in']"
    ],
    "prefer-destructuring": [
      "error",
      {
        "object": false,
        "array": false
      }
    ],
    "function-paren-newline": [
      "error",
      "consistent"
    ],
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "multiline": true
        },
        "ObjectPattern": {
          "multiline": true
        }
      }
    ],
    "no-await-in-loop": 0,
    "no-restricted-globals": 0
  }
}